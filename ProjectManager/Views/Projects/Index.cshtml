@model IEnumerable<ProjectManager.Models.Project>
@{
    ViewData["Title"] = "Lista Projektów";
}

<h1>Projekty</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nowy projekt</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Opis</th>
            <th>Termin</th>
            <th>Klient</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Deadline.ToShortDateString()</td>
            <td>@item.Customer?.CompanyName</td>
            <td>
                <a href="#" class="btn btn-sm btn-info">Szczegóły</a>
            </td>
        </tr>
}
    </tbody>
</table>
